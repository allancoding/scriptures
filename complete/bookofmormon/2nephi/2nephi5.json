{
    "_id": "2nephi5",
    "nextChapterId": "2nephi6",
    "prevChapterId": "2nephi4",
    "volume": {
        "title": "Book of Mormon",
        "titleShort": "BoM",
        "titleOfficial": "The Book of Mormon",
        "_id": "bookofmormon"
