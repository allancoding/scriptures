{
    "_id": "mark9",
    "nextChapterId": "mark10",
    "prevChapterId": "mark8",
    "volume": {
        "title": "New Testament",
        "titleShort": "NT",
        "titleOfficial": "The New Testament",
        "_id": "newtestament"
