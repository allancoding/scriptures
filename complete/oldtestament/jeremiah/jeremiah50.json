{
    "_id": "jeremiah50",
    "nextChapterId": "jeremiah51",
    "prevChapterId": "jeremiah49",
    "volume": {
        "title": "Old Testament",
        "titleShort": "OT",
        "titleOfficial": "The Old Testament",
        "_id": "oldtestament"
    },
    "book": {
