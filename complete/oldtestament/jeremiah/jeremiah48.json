{
    "_id": "jeremiah48",
    "nextChapterId": "jeremiah49",
    "prevChapterId": "jeremiah47",
    "volume": {
        "title": "Old Testament",
        "titleShort": "OT",
        "titleOfficial": "The Old Testament",
        "_id": "oldtestament"
    },
    "book": {
        "title": "Jeremiah",
        "titleShort": "Jer",
