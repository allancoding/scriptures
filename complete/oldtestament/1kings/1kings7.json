{
    "_id": "1kings7",
    "nextChapterId": "1kings8",
    "prevChapterId": "1kings6",
    "volume": {
        "title": "Old Testament",
        "titleShort": "OT",
        "titleOfficial": "The Old Testament",
        "_id": "oldtestament"
    },
    "book": {
        "title": "1 Kings",
        "titleShort": "1 Kgs",
