{
    "_id": "1samuel14",
    "nextChapterId": "1samuel15",
    "prevChapterId": "1samuel13",
    "volume": {
        "title": "Old Testament",
        "titleShort": "OT",
        "titleOfficial": "The Old Testament",
        "_id": "oldtestament"
    },
    "book": {
        "title": "1 Samuel",
        "titleShort": "1 Sam",
