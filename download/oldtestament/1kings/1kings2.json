{
    "_id": "1kings2",
    "nextChapterId": "1kings3",
    "prevChapterId": "1kings1",
    "volume": {
        "title": "Old Testament",
        "titleShort": "OT",
        "titleOfficial": "The Old Testament",
        "_id": "oldtestament"
    },
    "book": {
        "title": "1 Kings",
