{
    "_id": "leviticus13",
    "nextChapterId": "leviticus14",
    "prevChapterId": "leviticus12",
    "volume": {
        "title": "Old Testament",
        "titleShort": "OT",
        "titleOfficial": "The Old Testament",
        "_id": "oldtestament"
    },
    "book": {
